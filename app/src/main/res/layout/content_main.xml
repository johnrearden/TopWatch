<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.intricatech.topwatch.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#333333">

    <LinearLayout
        android:id="@+id/top_bar_linlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/route_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_semitransparent"
            android:gravity="center"
            android:onClick="onRouteNameTVPressed"
            android:text="New Route"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar_linlayout"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id= "@+id/main_time_readout"
        android:text="0:00:00.0"
        android:background="@drawable/button_background_semitransparent"
        android:singleLine="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_since_last_split"
        android:layout_below="@id/main_time_readout"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:visibility="visible"
        android:text="00:00.00"
        android:textColor="#dddddd"
        android:background="@drawable/button_background_semitransparent"
        android:layout_margin="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="8"
        android:id="@+id/location_and_splits_holder"
        android:layout_below="@id/time_since_last_split"
        android:layout_above="@+id/button_linearlayout"
        android:layout_margin="10dp"
        >

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/gps_gridlayout"
            android:layout_above="@+id/button_linearlayout"
            android:columnCount="1"
            android:rowCount="4"
            android:background="#334033"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/latitude_tv"
                android:padding="10dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:text="Waiting"
                android:layout_column="0"
                android:layout_row="0"
                android:singleLine="true"
                android:textColor="#aaffaa" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/longitute_tv"
                android:padding="10dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:text="Waiting"
                android:layout_column="0"
                android:layout_row="1"
                android:singleLine="true"

                android:textColor="#aaffaa" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/altitude_tv"
                android:padding="10dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:text="Waiting"
                android:layout_column="0"
                android:layout_row="2"
                android:singleLine="true"

                android:textColor="#aaffaa" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/speed_tv"
                android:padding="10dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:text="Waiting"
                android:layout_column="0"
                android:layout_row="3"
                android:singleLine="true"

                android:textColor="#aaffaa" />

        </GridLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:id="@+id/split_times_scrollview"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:scrollIndicators="right">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/split_times_linearlayout"
                android:orientation="vertical"
                android:gravity="center_horizontal">
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/button_linearlayout"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical">

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/stop_button"
            android:gravity="center"
            android:scaleType="fitXY"
            android:background="@drawable/round_black_button"
            android:textColor="#ffffff"
            android:text="RESET"
            android:singleLine="true"
            android:padding="5dp"
            android:textStyle="bold"
            android:longClickable="true" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/play_pause_button"
            android:gravity="center"
            android:src="@drawable/play_icon_stopwatch"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:onClick="onPlayButtonPressed"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/lap_button"
            android:gravity="center"
            android:text="LAP"
            android:background="@drawable/round_black_button"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:onClick="onLapButtonPressed"
            android:padding="5dp" />

    </LinearLayout>

</RelativeLayout>
